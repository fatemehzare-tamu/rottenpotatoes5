<!-- app/views/movies/_form.html.erb -->
<%= form_with(model: movie, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter movie title" %>
  </div>

  <div class="form-group">
    <%= form.label :rating, class: "form-label" %>
    <%= form.text_field :rating, class: "form-control", placeholder: "Enter movie rating" %> 
  </div>

  <div class="form-group">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter movie description", rows: 5 %>
  </div>

  <div class="form-group">
    <%= form.submit class: "btn btn-success", value: "Save Movie" %>
  </div>
<% end %>
