<h1>Listing Movies</h1>

<table>
  <thead>
    <tr>
      <th><%= link_to 'Title', movies_path(sort: 'title', direction: sort_direction) %></th>
      <th><%= link_to 'Rating', movies_path(sort: 'rating', direction: sort_direction) %></th>
      <th><%= link_to 'Release Date', movies_path(sort: 'release_date', direction: sort_direction) %></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.release_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
