<h1>Listing Movies</h1>

<div class="movie-list" style="display: flex; flex-wrap: wrap; justify-content: space-around;">
  <% @movies.each do |movie| %>
    <div class="card" style="border: 1px solid #ddd; margin: 10px; padding: 10px; border-radius: 8px; width: 200px;">
      <h2><%= movie.title %></h2>
      <p><strong>Rating:</strong> <%= movie.rating %></p>
      <p><strong>Release Date:</strong> <%= movie.release_date %></p>
      <p><%= movie.description %></p>
      <div style="display: flex; justify-content: space-between;">
        <%= link_to 'Show', movie_path(movie), class: 'btn btn-primary' %>
        <%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-secondary' %>
      </div>
    </div>
  <% end %>
</div>
