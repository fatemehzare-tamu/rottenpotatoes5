<h1>Edit Movie</h1>

<%= form_with(model: @movie, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :rating %>
    <%= form.text_field :rating, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :release_date %>
    <%= form.date_select :release_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit 'Update Movie', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', movies_path, class: 'btn btn-secondary' %>
